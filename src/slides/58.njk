{% extends 'layouts/_slide.njk' %}

{% set slide = {
  bodyClass: 'bgBlack',
  no: 58,
  last: false,
  title: "VoiceOver cheat sheet"
} %}

{% block content %}

  <h1>
    VoiceOver cheat sheet
  </h1>

  <p>
    The default VO key is Control and Option together.
  </p>

  <dl>
    <div class="clearfix">
      <dt>Read from cursor point to the bottom of the page</dt>
      <dd>VO + a</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next focusable element</dt>
      <dd>Tab</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next heading</dt>
      <dd>VO + Command + H</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next list</dt>
      <dd>VO + Command + x</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next graphic</dt>
      <dd>VO + Command + g</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next form field</dt>
      <dd>VO + Command + j</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next table</dt>
      <dd>VO + Command + t</dd>
    </div>

    <div class="clearfix">
      <dt>Navigate table content</dt>
      <dd>VO + arrow key</dd>
    </div>

    <div class="clearfix">
      <dt>Show rotor for headings, links and landmarks</dt>
      <dd>VO + U (then arrow keys)</dd>
    </div>

    <div class="clearfix">
      <dt>Stop VoiceOver talking</dt>
      <dd>Control</dd>
    </div>
  </dl>

{% endblock %}