{% extends 'layouts/_slide.njk' %}

{% set slide = {
  bodyClass: 'bgBlack',
  no: 64,
  last: false,
  title: "Video of accessible prototype"
} %}

{% block content %}

  <h1>
    Video of accessible prototype
  </h1>

  <p>
    This is the same video as before, but with the tabs made accessible.
  </p>

  <section class="player">
    <div class="controls" aria-label="Video controls">
      <button class="playpause">Play</button>
      <button class="stop">Stop</button>
      <button class="rwd">Rewind</button>
      <button class="fwd">Forward</button>
      <div class="time">00:00</div>
    </div>

    <video controls aria-label="Video â€“ Successfully moving keyboard focus to a tab component">
      <source src="../img/prototype-accessible.mp4" type="video/mp4">
      <p>
        Your browser doesn't support HTML5 video.
      </p>
    </video>
  </section>

{% endblock %}