{% extends 'layouts/_slide.njk' %}

{% set slide = {
  bodyClass: 'bgBlack',
  no: 59,
  last: false,
  title: "NVDA cheat sheet"
} %}

{% block content %}

  <h1>
    NVDA cheat sheet
  </h1>

  <p>
    The default NVDA key is Control and Alt together.
  </p>

  <dl>
    <div class="clearfix">
      <dt>Read from cursor point to the bottom of the page</dt>
      <dd>NVDA + Numpad 2</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next focusable element</dt>
      <dd>Tab</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next landmark</dt>
      <dd>d</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next heading</dt>
      <dd>h</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next list</dt>
      <dd>l</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next graphic</dt>
      <dd>g</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next form field</dt>
      <dd>f</dd>
    </div>

    <div class="clearfix">
      <dt>Move to next table</dt>
      <dd>t</dd>
    </div>

    <div class="clearfix">
      <dt>Navigate table content</dt>
      <dd>NVDA + arrow key</dd>
    </div>

    <div class="clearfix">
      <dt>Show rotor for headings, links and landmarks</dt>
      <dd>NVDA + F7</dd>
    </div>

    <div class="clearfix">
      <dt>Stop NVDA talking</dt>
      <dd>Control</dd>
    </div>

    <div class="clearfix">
      <dt>Toggle browser mode</dt>
      <dd>NVDA + space</dd>
    </div>

    <div class="clearfix">
      <dt>Refresh virtual buffer</dt>
      <dd>NVDA key + F5</dd>
    </div>
  </dl>

{% endblock %}